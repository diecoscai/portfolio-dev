---
import Header from "../components/Header.astro";
import "@fontsource-variable/onest";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Diego Costa - Full Stack Developer</title>
  </head>
  <div class="relative w-full bg-[#FFFCF2] dark:bg-[#252422] text-[#252422] dark:text-[#CCC5B9] fill-[#252422] dark:fill-[#CCC5B9]">
    <div class="bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px] ">
      <body>
        <Header />
        <slot />
      </body>
    </div>
  </div>

  <style is:global>
    :root {
      color-scheme: light dark;
    }

    html {
      font-family: "Onest Variable", system-ui, sans-serif;
    }
    h1 { font-family: 'Space Grotesk', sans-serif; }

    body {
      color: #1d1d1d;
      display: flex;
      flex-direction: column;
      height: 100vh;
      font-family: 'Inter', sans-serif;
    }

    html,
    body {
      width: 100%;
      height: 100%;
      overflow-x: hidden;
      scroll-behavior: smooth;
    }

    @media (max-width: 768px) {
      main {
        padding: 0 1rem;
      }
    }
  </style>

</html>
